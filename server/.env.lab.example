# Lab profile template for controlled training only.
# Copy to .env locally and adjust as needed. Do not commit real secrets.
NODE_ENV=lab
LAB_MODE=true
LAB_PROFILE=secure

API_HOST=0.0.0.0
API_PORT=4000
TRUST_PROXY=true
CORS_ORIGINS=http://localhost:5173

DATABASE_PROVIDER=sqlite
DATABASE_URL=file:./dev.db

SESSION_NAME=pos_sid
SESSION_SECRET=lab_demo_change_me
COOKIE_SECURE=false

CSRF_ENABLED=true
RATE_LIMIT_ENABLED=true
LOCKOUT_ENABLED=true
LOCKOUT_THRESHOLD=5
LOCKOUT_MINUTES=15
WEAK_PASSWORDS_ALLOWED=false
PASSWORD_MIN_LENGTH=10

# Lab-only defaults
SEED_LAB_USERS=false
PAYMENT_TOKEN_MODE=strong
EXPOSE_PAYMENT_TOKENS=false

# SIEM integration (optional)
SIEM_MODE=off
SYSLOG_HOST=127.0.0.1
SYSLOG_PORT=514
SIEM_HTTP_URL=http://localhost:8088/services/collector
SIEM_HTTP_API_KEY=replace_with_local_lab_token

LOG_LEVEL=info
TAX_RATE=0.0825
VOID_WINDOW_MINUTES=30
