# Runtime mode
NODE_ENV=development
LAB_MODE=false
LAB_PROFILE=secure

# Network and API
API_HOST=0.0.0.0
API_PORT=4000
TRUST_PROXY=false
CORS_ORIGINS=http://localhost:5173

# Database
DATABASE_PROVIDER=sqlite
DATABASE_URL=file:./dev.db

# Session and cookies
SESSION_NAME=pos_sid
SESSION_SECRET=replace_with_a_long_random_secret
COOKIE_SECURE=false

# Security controls
CSRF_ENABLED=true
RATE_LIMIT_ENABLED=true
LOCKOUT_ENABLED=true
LOCKOUT_THRESHOLD=5
LOCKOUT_MINUTES=15
WEAK_PASSWORDS_ALLOWED=false
PASSWORD_MIN_LENGTH=10

# Lab toggles
SEED_LAB_USERS=false
PAYMENT_TOKEN_MODE=strong
EXPOSE_PAYMENT_TOKENS=false

# SIEM forwarding
SIEM_MODE=off
SYSLOG_HOST=
SYSLOG_PORT=514
SIEM_HTTP_URL=
SIEM_HTTP_API_KEY=

# App behavior
LOG_LEVEL=info
TAX_RATE=0.0825
VOID_WINDOW_MINUTES=30
