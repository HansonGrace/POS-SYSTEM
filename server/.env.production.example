NODE_ENV=production
LAB_MODE=false
LAB_PROFILE=secure

API_HOST=0.0.0.0
API_PORT=4000
TRUST_PROXY=true
CORS_ORIGINS=https://your-pos-ui.example.com

DATABASE_PROVIDER=postgresql
DATABASE_URL=postgresql://pos_user:replace_password@db-host:5432/posdb?schema=public

SESSION_NAME=pos_sid
SESSION_SECRET=replace_with_a_very_long_random_secret
COOKIE_SECURE=true

CSRF_ENABLED=true
RATE_LIMIT_ENABLED=true
LOCKOUT_ENABLED=true
LOCKOUT_THRESHOLD=5
LOCKOUT_MINUTES=15
WEAK_PASSWORDS_ALLOWED=false
PASSWORD_MIN_LENGTH=12

SEED_LAB_USERS=false
PAYMENT_TOKEN_MODE=strong
EXPOSE_PAYMENT_TOKENS=false

SIEM_MODE=http
SIEM_HTTP_URL=https://siem.example.com/events
SIEM_HTTP_API_KEY=replace_with_runtime_secret
SYSLOG_HOST=
SYSLOG_PORT=514

LOG_LEVEL=info
TAX_RATE=0.0825
VOID_WINDOW_MINUTES=30
